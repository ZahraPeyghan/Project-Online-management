<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CostFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bnazanin"
                    android:text="تومان"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/boxprice"
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittextstyle"
                    android:drawableRight="@drawable/dollar"
                    android:drawablePadding="20dp"
                    android:drawableTint="@color/purple"
                    android:ems="10"
                    android:fontFamily="@font/bnazanin"
                    android:hint="مبلغ"
                    android:inputType="number"
                    android:padding="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/shadow" />
            </LinearLayout>

            <EditText
                android:id="@+id/boxgrouping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittextstyle"
                android:drawableRight="@drawable/pricetag"
                android:drawablePadding="20dp"
                android:drawableTint="@color/purple"
                android:ems="10"
                android:fontFamily="@font/bnazanin"
                android:hint="دسته بندی"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/shadow" />

            <EditText
                android:id="@+id/boxaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittextstyle"
                android:drawableRight="@drawable/wallet"
                android:drawablePadding="20dp"
                android:drawableTint="@color/purple"
                android:ems="10"
                android:fontFamily="@font/bnazanin"
                android:hint="نوع حساب"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/shadow" />

            <EditText
                android:id="@+id/boxdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittextstyle"
                android:drawableRight="@drawable/date"
                android:drawablePadding="20dp"
                android:drawableTint="@color/purple"
                android:ems="10"
                android:fontFamily="@font/bnazanin"
                android:hint="تاریخ"
                android:inputType="date"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/shadow" />

            <EditText
                android:id="@+id/boxdiscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittextstyle"
                android:drawableRight="@drawable/page"
                android:drawablePadding="20dp"
                android:drawableTint="@color/purple"
                android:ems="10"
                android:fontFamily="@font/bnazanin"
                android:hint="توضیحات"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/shadow" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnsabthazineh"
        android:layout_width="188dp"
        android:layout_height="53dp"
        android:background="@drawable/buttonstyle"
        android:fontFamily="@font/titr"
        android:text="ثبت هزینه"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardView4"
        app:layout_constraintHorizontal_bias="0.295"
        app:layout_constraintStart_toStartOf="@+id/cardView4"
        app:layout_constraintTop_toBottomOf="@+id/cardView4"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/btnplashazineh"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/buttonstyle"
        android:drawableLeft="@drawable/plustext"
        android:drawablePadding="200dp"
        android:drawableTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btnsabthazineh"
        app:layout_constraintEnd_toEndOf="@+id/cardView4"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toEndOf="@+id/btnsabthazineh"
        app:layout_constraintTop_toTopOf="@+id/btnsabthazineh"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>